<div id="power-container">
                <span>Power:</span> <span id="on"></span>
            </div>
            
            <div>
                <button id="power" class="btn"><i class="fa-solid fa-power-off"></i></button>
            </div>

inside the variable:

power: function () {
    tv.on = !tv.on;
    document.getElementById("on").textContent = tv.on ? "On" : "Off";
},

outside the variable: 

var powerBtn = document.getElementById("power");
powerBtn.addEventListener("click", function () {
tv.power(); 
});


CSS:
#power-container {
	padding-top: 4%;
}

#power {
	font-size: 20px;
	color: white;
	height: 40px;
	width: 40px;
	border-radius: 40px;
	border: none;
	background: radial-gradient(50% 50% at 50% 50%, #FF4646 20%, rgba(163, 0, 0, 0.82) 100%);
	cursor: pointer;
	margin-top: 10px;
}